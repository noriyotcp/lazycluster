{
  "name": "lazycluster",
  "description": "A Chrome extension for enhanced tab and window management",
  "private": true,
  "version": "1.5.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "build": "wxt build",
    "build:dev": "wxt build --mode development",
    "zip": "wxt zip",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "lint": "eslint . --ext .ts,.tsx,.js,.mjs",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "fix:eslint": "npm run lint -- --fix",
    "fix:prettier": "prettier --write .",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "submit": "wxt submit",
    "preversion": "npm run compile && npm run lint && npm run test:unit",
    "version": "npm run build",
    "postversion": "echo 'Version bumped! Create PR for review.'"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@tailwindcss/vite": "^4.2.0",
    "daisyui": "^5.5.18",
    "react": "~19.2.4",
    "react-dom": "~19.2.4",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@types/chrome": "^0.1.36",
    "@types/node": "^22.19.11",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/tmp": "^0.2.6",
    "@vitest/ui": "^3.2.4",
    "@wxt-dev/module-react": "^1.1.5",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "happy-dom": "^20.6.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.1.3",
    "wxt": "^0.20.17"
  }
}
